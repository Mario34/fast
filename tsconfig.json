{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "demo/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", "demo/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
